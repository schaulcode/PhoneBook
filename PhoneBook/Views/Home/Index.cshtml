@model IEnumerable<PhoneBookData.Model.Entry>
@{
    ViewBag.Title = "Phone Book";
}

@using (Html.BeginForm())
{
    <button class="btn btn-primary float-left">New</button>
    <div class="form-group float-right">
        @Html.TextBox("SearchField")
        <button class="btn btn-secondary">Search</button>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Name</th>
                    <th>@item.PhoneNumber</th>
                    <th>@item.Address</th>
                </tr>
            }
        </tbody>
    </table>
}